{{- $posts := where .Site.RegularPages "Section" "posts" -}}
{{- $limit := 50 -}}
{{- printf "<?xml version=\"1.0\" encoding=\"UTF-8\"?>" | safeHTML -}}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ .Site.Title }}</title>
    <link>{{ .Site.BaseURL }}</link>
    <description>{{ with .Site.Params.description }}{{ . }}{{ else }}{{ .Site.Title }}{{ end }}</description>
    <generator>Hugo</generator>
    <language>{{ .Site.LanguageCode }}</language>
    <lastBuildDate>{{ now.Format "Mon, 02 Jan 2006 15:04:05 MST" }}</lastBuildDate>
    {{- with .OutputFormats.Get "RSS" -}}
    <atom:link href="{{ .Permalink }}" rel="self" type="{{ .MediaType.Type }}" />
    {{- end -}}

    {{- range first $limit (sort $posts "Date" "desc") -}}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <guid isPermaLink="true">{{ .Permalink }}</guid>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 MST" }}</pubDate>
      {{ with .Summary }}<description>{{ . | plainify }}</description>{{ end }}
    </item>
    {{- end -}}
  </channel>
</rss>
